<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/dialog_backround" >
    
    <LinearLayout
	    android:id="@+id/dialog_linearLayout_normalContent"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:orientation="vertical" >
	    
	    <TextView
	        android:id="@+id/dialog_textView_title"
	        android:layout_width="310dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:layout_marginRight="5dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginBottom="5dp"
	        android:gravity="center"
	        android:text="@string/app_name"
	        android:textColor="@color/soft_blue"
	        android:textSize="18sp"
	        android:textStyle="bold" />
	    
	    <TextView
	        android:id="@+id/dialog_textView_message"
	        android:layout_width="310dp"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dp"
	        android:gravity="center"
	        android:text="@string/app_name"
	        android:textColor="@color/soft_blue"
	        android:textSize="16sp" />
	
	</LinearLayout>
    
    <LinearLayout
	    android:id="@+id/dialog_linearLayout_buttons"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:orientation="vertical" >
	    
	    <View
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:layout_marginTop="5dp"
	        android:background="@color/soft_grey" />
	    
	    <LinearLayout
		    android:layout_width="310dp"
		    android:layout_height="wrap_content"
		    android:gravity="center_horizontal"
		    android:orientation="horizontal" >
	    
		    <Button
		        android:id="@+id/dialog_button_leftButtonControl"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:background="@drawable/left_button_background"
		        android:gravity="center"
		        android:text="@string/control_cancel"
		        android:textColor="@color/soft_blue"
		        android:textSize="16sp"
		        android:maxLines="1"
		        android:visibility="gone" />
		    
		    <View
		        android:id="@+id/dialog_view_leftSeparator"
		        android:layout_width="1dp"
		        android:layout_height="fill_parent"
		        android:background="@color/soft_grey"
		        android:visibility="gone" />
		    
		    <Button
		        android:id="@+id/dialog_button_middleButtonControl"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:background="@drawable/normal_button_background"
		        android:gravity="center"
		        android:text="@string/control_no"
		        android:textColor="@color/soft_blue"
		        android:textSize="16sp"
		        android:maxLines="1"
		        android:visibility="gone" />
		    
		    <View
		        android:id="@+id/dialog_view_rightSeparator"
		        android:layout_width="1dp"
		        android:layout_height="fill_parent"
		        android:background="@color/soft_grey"
		        android:visibility="gone" />
		    
		    <Button
		        android:id="@+id/dialog_button_rightButtonControl"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:background="@drawable/single_button_background"
		        android:gravity="center"
		        android:text="@string/control_yes"
		        android:textColor="@color/soft_blue"
		        android:textSize="16sp"
		        android:maxLines="1" />
		    
		</LinearLayout>
    
	</LinearLayout>

</LinearLayout>
